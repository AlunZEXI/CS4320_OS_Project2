<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/textResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:textStyle="italic|bold"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/textTest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textResult"
        />

    <ImageView
        android:id="@+id/ImageIcon"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_above="@id/buttonStart"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:id="@+id/buttonStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:text="Play Music"
        android:backgroundTint="#db5a6b"
        android:textColor="@color/white"
        />

    <Button
        android:id="@+id/buttonStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonStart"
        android:layout_centerHorizontal="true"
        android:text="Stop Music"
        android:backgroundTint="#db5a6b"
        android:textColor="@color/white"
        />

    <Button
        android:id="@+id/buttonBind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonStop"
        android:layout_centerHorizontal="true"
        android:text="Bind Service"
        android:backgroundTint="#db5a6b"
        android:textColor="@color/white"
        />

    <Button
        android:id="@+id/buttonUnbind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonBind"
        android:layout_centerHorizontal="true"
        android:text="Unbind Service"
        android:backgroundTint="#db5a6b"
        android:textColor="@color/white"
        />

    <Button
        android:id="@+id/buttonGet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonUnbind"
        android:layout_marginBottom="63dp"
        android:layout_centerHorizontal="true"
        android:text="Get Music Information"
        android:backgroundTint="#db5a6b"
        android:textColor="@color/white"
        />

</RelativeLayout>